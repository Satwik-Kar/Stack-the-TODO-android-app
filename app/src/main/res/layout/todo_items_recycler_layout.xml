<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20sp">

    <ImageView
        android:id="@+id/logo_status"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginEnd="8dp"
        android:tint="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_pending_actions_24" />

    <ImageView
        android:id="@+id/image_todo"
        android:layout_width="70sp"
        android:layout_height="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/title_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/image_todo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_todo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Description duis aute irure dolor in reprehenderit in voluptate velit."
        app:layout_constraintBottom_toTopOf="@+id/date_todo"
        app:layout_constraintEnd_toStartOf="@+id/logo_status"
        app:layout_constraintStart_toStartOf="@+id/title_todo"
        app:layout_constraintTop_toBottomOf="@+id/title_todo" />

    <TextView
        android:id="@+id/date_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_add_circle_outline_24"
        android:drawablePadding="5sp"
        android:drawableTint="@color/textColor"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/image_todo"
        app:layout_constraintStart_toStartOf="@+id/desc_todo" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/primarySurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_todo" />


</androidx.constraintlayout.widget.ConstraintLayout>